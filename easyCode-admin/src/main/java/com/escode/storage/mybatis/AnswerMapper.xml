<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.escode.domain.repository.AnswerMapper">
    
    <resultMap id="BaseResultMap" type="com.escode.domain.model.Answer">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
    </resultMap>

    <!-- 获取所有答案 -->
    <select id="getAll" resultMap="BaseResultMap">
        select * from test_anser
    </select>

    <!-- 根据id获取答案 -->
    <select id="get" resultMap="BaseResultMap" parameterType="Integer">
    select * from test_anser WHERE id=#{id}
  </select>

    <!-- 根据id修改答案内容 -->
    <update id="modifyContentById">
        UPDATE test_anser
            SET content=#{content}
                where id =#{id}
    </update>

    <!-- 添加答案 -->
    <insert id="save" parameterType="com.escode.domain.model.Answer">
        INSERT into test_anser(id,title,content)
            VALUES (#{id},#{title},#{content})
    </insert>

    <!-- 根据id删除答案 -->
    <delete id="delete" parameterType="Integer">
         DELETE FROM test_anser
               WHERE id=#{id}
    </delete>

</mapper>